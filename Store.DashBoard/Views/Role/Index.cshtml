@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<hr />

<partial name="RoleViewPartialView" model="new RoleFormViewModel()" />


@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>

            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody >

            @foreach (var role in Model)
            {
                <tr >
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-warning" >Edit</a>

                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>


    </table>

}
else
{

    <div class="mt-3 alert alert-danger">
        <h2> There Is No Roles </h2>
    </div>

}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}